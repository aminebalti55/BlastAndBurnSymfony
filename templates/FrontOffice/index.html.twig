{% extends '/FrontOffice/base.html.twig' %}

{% block body %}
    <!-- Start Main -->
    <main>
        <!--? slider Area Start -->
        <div class="slider-area ">
            <div class="slider-active">
                <!-- Single Slider -->
                <div class="single-slider slider-height d-flex align-items-center slide-bg">
                    <div class="container">
                        <div class="row justify-content-between align-items-center">
                            <div class="col-xl-8 col-lg-8 col-md-8 col-sm-8">
                                <div class="hero__caption">
                                    <h1 data-animation="fadeInLeft" data-delay=".4s" data-duration="2000ms">Your Self Improvement Space</h1>
                                    <p data-animation="fadeInLeft" data-delay=".7s" data-duration="2000ms">Lets Get Blasting</p>
                                    <!-- Hero-btn -->
                                    <div class="hero__btn" data-animation="fadeInLeft" data-delay=".8s" data-duration="2000ms">
                                        <a href="{{ path('about') }}" class="btn hero-btn">More Details</a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-4 col-lg-3 col-md-4 col-sm-4 d-none d-sm-block">
                                <div class="hero__img" data-animation="bounceIn" data-delay=".4s">
                                    <img src="../assets/img/hero/Photo.png" alt="" class=" heartbeat">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Single Slider -->
                <div class="single-slider slider-height d-flex align-items-center slide-bg">
                    <div class="container">
                        <div class="row justify-content-between align-items-center">
                            <div class="col-xl-8 col-lg-8 col-md-8 col-sm-8">
                                <div class="hero__caption">
                                    <h1 data-animation="fadeInLeft" data-delay=".4s" data-duration="2000ms">Let's blast together</h1>
                                    <!-- Hero-btn -->
                                    <div class="hero__btn" data-animation="fadeInLeft" data-delay=".8s" data-duration="2000ms">
                                        <a href="{{ path('about') }}" class="btn hero-btn">More Details</a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-3 col-lg-3 col-md-4 col-sm-4 d-none d-sm-block">
                                <div class="hero__img" data-animation="bounceIn" data-delay=".4s">
                                    <img src="../assets/img/hero/Photo.png" alt="" class=" heartbeat">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- slider Area End-->
        <!-- Property Section Begin -->
        <section class="property-section latest-property-section spad">
            <div class="container">
                <div class="row">
                    <div class="col-lg-5">
                        <div class="section-title">
                            <h4>New Recipes</h4>
                        </div>
                    </div>
                </div>
                <div class="row property-filter">
                    {% for i in newRecipes %}
                        <div class="col-lg-4 col-md-6">
                            <div class="property-item">
                                <div class="pi-pic set-bg" data-setbg="{{ asset('assets/img/recipe/'~i.imgUrl) }}">
                                    <div class="label c-red">recipe</div>
                                </div>
                                <div class="pi-text">
                                    <a href="#" class="heart-icon"><span class="icon_heart_alt"></span></a>
                                    <div class="pt-price">{{ i.title }}</div>
                                   
                                    <div class="pi-agent">
                                        <div class="pa-item">
                                            <div class="pa-info">
                                                <img src="../assets/others/img/property/posted-by/pb-1.jpg" alt="">
                                                <h6>{{ i.user.firstName }}   {{ i.user.lastName}} </h6>
                                            </div>
                                            <div class="pa-text">
                                            {{ i.user.email}}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </section>
        <!-- Property Section End -->
        <!--? Gallery Area Start -->
        <div class="gallery-area">
            <div class="container-fluid p-0 fix">
                <div class="row">
                    <div class="col-xl-6 col-lg-4 col-md-6 col-sm-6">
                        <div class="single-gallery mb-30">
                            <div class="gallery-img big-img" style="background-image: url(../assets/img/home/r1.jpg);"></div>
                        </div>
                    </div>
                    <div class="col-xl-3 col-lg-4 col-md-6 col-sm-6">
                        <div class="single-gallery mb-30">
                            <div class="gallery-img big-img" style="background-image: url(../assets/img/home/r2.jpg);"></div>
                        </div>
                    </div>
                    <div class="col-xl-3 col-lg-4 col-md-12">
                        <div class="row">
                            <div class="col-xl-12 col-lg-12 col-md-6 col-sm-6">
                                <div class="single-gallery mb-30">
                                    <div class="gallery-img small-img" style="background-image: url(../assets/img/home/r3.jpg);"></div>
                                </div>
                            </div>
                            <div class="col-xl-12 col-lg-12  col-md-6 col-sm-6">
                                <div class="single-gallery mb-30">
                                    <div class="gallery-img small-img" style="background-image: url(../assets/img/home/r4.jpg);"></div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <!-- Gallery Area End -->
        <section class="property-section latest-property-section spad">
            <div class="container">
                <div class="row">
                    <div class="col-lg-5">
                        <div class="section-title">
                            <h4>New sessions</h4>
                        </div>
                    </div>
                </div>
                <div class="row property-filter">
                    {% for i in newsessions %}
                        <div class="col-lg-4 col-md-6">
                            <div class="property-item">
                                <div class="pi-pic set-bg" data-setbg="{{ asset('assets/img/session/'~i.imgUrl) }}">
                                    <div class="label c-red">session</div>
                                </div>
                                <div class="pi-text">
                                    <a href="#" class="heart-icon"><span class="icon_heart_alt"></span></a>
                                    <h5><a href="#">{{ i.title }}</a></h5>
                                   
                                    <div class="pi-agent">
                                        <div class="pa-item">
                                            <div class="pa-info">
                                                <img src="../assets/others/img/property/posted-by/pb-1.jpg" alt="">
                                                <h6>{{ i.user.firstName }} {{ i.user.lastName }}</h6>
                                            </div>
                                            <div class="pa-text">
                                    {{ i.user.email }}                                            
                                    </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </section>
        <!-- Property Section End -->
        <!--? Gallery Area Start -->
        <div class="gallery-area">
            <div class="container-fluid p-0 fix">
                <div class="row">
                    <div class="col-xl-6 col-lg-4 col-md-6 col-sm-6">
                        <div class="single-gallery mb-30">
                            <div class="gallery-img big-img" style="background-image: url(../assets/img/home/y1.jpg);"></div>
                        </div>
                    </div>
                    <div class="col-xl-3 col-lg-4 col-md-6 col-sm-6">
                        <div class="single-gallery mb-30">
                            <div class="gallery-img big-img" style="background-image: url(../assets/img/home/y2.jpg);"></div>
                        </div>
                    </div>
                    <div class="col-xl-3 col-lg-4 col-md-12">
                        <div class="row">
                            <div class="col-xl-12 col-lg-12 col-md-6 col-sm-6">
                                <div class="single-gallery mb-30">
                                    <div class="gallery-img small-img" style="background-image: url(../assets/img/home/y4.jpg);"></div>
                                </div>
                            </div>
                            <div class="col-xl-12 col-lg-12  col-md-6 col-sm-6">
                                <div class="single-gallery mb-30">
                                    <div class="gallery-img small-img" style="background-image: url(../assets/img/home/y3.jfif);"></div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <!-- Gallery Area End -->
        <!-- Property Section Begin -->
      
        <!-- Property Section End -->
        <!--? Gallery Area Start -->
       
        <!-- Gallery Area End -->
        <!-- Property Section Begin -->


    </main>
    <!-- End Main -->
{% endblock %}