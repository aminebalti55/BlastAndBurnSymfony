{% extends '/FrontOffice/base.html.twig' %}
{% block body %}
    <head>

    <main id="main">

        <!-- Hero Area Start-->
        <div class="slider-area ">
            <div class="single-slider slider-height2 d-flex align-items-center">
                <div class="container">
                    <div class="row">
                        <div class="col-xl-12">
                            <div class="hero-cap text-center">
                                <h2>Create Event</h2>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <!-- ======= Event Section ======= -->
        <div class="about-details section-padding30">
            <div class="container">
                {{form_start(form,{'attr':{'class':'wpcf7-form','novalidate':'novalidate'}})}}

                <div class="form-group">
                    <label class="form-label" for="exampleInputname">title</label>
                    {{ form_widget(form.title , {'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'title'}} ) }}
                    {{ form_errors(form.title) }}
                </div>

                <div class="form-group">
                    <label class="form-label" for="exampleInputname">description</label>
                    {{ form_widget(form.description , {'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'description'}} ) }}
                    {{ form_errors(form.description) }}
                </div>
                    
                <script>
                    var thisIsAnObject = 'test';
                    var w = window.open("{{ path('event_map') }}");
                    w.myVariable = thisIsAnObject;
                    function setValue(myVal) {

                        document.getElementById('Filename1').value = myVal;

                    }
                </script>

                
                <div class="form-group">
                <label class="col-sm-2 col-form-label">Localiser</label>
                    <div class="col-md-7">{{ form_errors(form.Location)}}{{ form_widget(form.Location, { 'id': 'Filename1' } ,{ 'readonly':'readonly' })}}
                        <script language="javascript" type="text/javascript">
                            function OpenPopupCenter(pageURL, title, w, h) {
                                var left = (screen.width - w) / 2;
                                var top = (screen.height - h) / 4;  // for 25% - devide by 4  |  for 33% - devide by 3
                                var targetWin = window.open(pageURL, title, 'toolbar=no, Location=no, directories=no, status=no, menubar=no, scrollbars=no, resizable=no, copyhistory=no, width=' + w + ', height=' + h + ', top=' + top + ', left=' + left);
                            }
                        </script>
                        <a style="margin-left: 200px; margin-top: 10px" class="btn btn-primary mr-2"
                           onclick="OpenPopupCenter('{{ path('event_map') }}', 'TEST!?', 800, 600);">Map</a>
                    </div>
            </div>

                <div class="col-md-12 form-group p_star">
                    {{ form_row(form.type) }}
                </div>
                <div class="form-group">
                    <label class="form-label" for="exampleInputname">price</label>
                    {{ form_widget(form.price , {'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'price'}} ) }}
                    {{ form_errors(form.price) }}
                </div>

                <div class="form-group">
                    <label class="form-label ">startDate</label>
                    {{ form_widget(form.startDate  ) }}
                    {{ form_errors(form.startDate) }}
                </div>
                <div class="form-group">
                    <label class="form-label ">endDate</label>
                    {{ form_widget(form.endDate ) }}
                    {{ form_errors(form.endDate) }}
                </div>
                <div class="form-group">
                    <label class="form-label ">ImgUrl</label>
                    {{ form_widget(form.ImgUrl  ) }}
                    {{ form_errors(form.ImgUrl) }}
                </div>
                <div class="form-group">
                    <label class="form-label " >Cat</label>
                    {{ form_widget(form.Cat ) }}
                    {{ form_errors(form.Cat) }}
                </div>



                {{ form_end(form) }}
            </div>
        </div>

    </main><!-- End #main -->
{% endblock %}