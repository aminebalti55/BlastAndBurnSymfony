{% extends '/FrontOffice/base.html.twig' %}

{% block body %}
    <!-- Start Main -->
    <main>
        <!-- Hero Area Start-->
        <div class="slider-area ">
            <div class="single-slider slider-height2 d-flex align-items-center">
                <div class="container">
                    <div class="row">
                        <div class="col-xl-12">
                            <div class="hero-cap text-center">
                                <h2>Sign Up</h2>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Hero Area End-->
        <!--================login_part Area =================-->
        <section class="login_part section_padding ">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-6 col-md-6">
                        <div class="login_part_form">
                            <div class="login_part_form_iner">
                                <h3>Welcome ! <br>
                                    Please Sign Up now</h3>
                                    {{ form_start(form) }}
                                    
                                    <div class="">
                                        <div class="row col-12">
                                        {{ form_errors(form.firstName) }}
                                        {{ form_widget(form.firstName,{ 'attr': {'class': 'form-control',
                                        'placeholder':"First name" } })  }}
                                        </div>
              
                                    </div>

                                    <div class="">
                                    </br>
                                        <div class="row col-12">
                                        {{ form_errors(form.lastName) }}
                                        {{ form_widget(form.lastName,{ 'attr': {'class': 'form-control',
                                        'placeholder':"Last name" } })  }}
                                        </div>
                                    </div>

                                    <div class="">
                                    </br>
                                        <div class="row col-3">
                                        {{ form_row(form.dateOfBirth,{ 'attr': {'class': 'form-control'} } ) }}
                                        </div>
                                    </div>

                                    <div class="">
                                    </br>
                                        <div class="row col-12">
                                        {{ form_errors(form.email) }}
                                        {{ form_widget(form.email,{ 'attr': {'class': 'form-control',
                                        'placeholder':"Email " } }) }}
                                        </div>
                                    </div>

                                    <div class="">
                                        </br>
                                        <div class="row col-12">
                                        {{ form_errors(form.plainPassword.first) }}
                                        {{ form_widget(form.plainPassword.first ,{ 'attr': {'class': 'form-control',
                                        'placeholder': "Password"} }) }}
                                        </div>
                                        </br>
                                        <div class="row col-12"> 
                                        {{ form_errors(form.plainPassword.second) }}
                                        {{ form_widget(form.plainPassword.second ,{'attr': {'class': 'form-control',
                                        'placeholder': "Confirm Password"} }) }}
                                        </div>
                                    </div>

                                    <div class="">
                                        </br>

                                        <div class="row col-12">
                                            <label>Are you a robot?</label>
                                            {{ form_errors(form.captchaCode, {'attr': {'class': 'form-control'}}) }}

                                            {{ form_widget(form.captchaCode, {'attr': {'class': 'form-control',
                                                'placeholder': "Type captcha code "}}) }}
                                        </div>

                                        </br>
                                        <div class="row col-12">
                                        {{ form_widget(form.Register, {'attr': {'class': 'btn_3 blue'}}) }}
                                        </div>
                                    </div>

                                    {{ form_row(form._token) }}
                                    {{ form_end(form) }}
                                    
