{% extends '/FrontOffice/base.html.twig' %}
{% block body %}
    <main id="main">

        <!-- ======= Breadcrumbs ======= -->
        <section id="breadcrumbs" class="breadcrumbs">
            <div class="container">

                <div class="d-flex justify-content-between align-items-center">
                    <h2>Event Categories</h2>
                    <ol>
                        <li><a href="{{ path('all_event' )}}">Events</a></li>

                    </ol>
                </div>

            </div>
        </section><!-- End Breadcrumbs -->


        <!-- ======= Portfolio Section ======= -->
        <section id="portfolio" class="portfolio">
            <div class="container">

                <div class="row portfolio-container" data-aos="fade-up" data-aos-delay="200">
                    {% for category in categories %}
                        <div class="col-lg-4 col-md-6 portfolio-item filter-app">
                            <div class="portfolio-wrap">
                                <img height="300px" src="{{ asset('assets/img/event/' ~ category.imgUrl ) }}">
                                <div class="portfolio-info">
                                    <h4>{{ category.name }}</h4>
                                    <p>{{ category.totalEvents }} Events</p>
                                    <a href="{{ path('events_by_category',{'id':category.catId}) }}" title="More Details">En Savoir Plus</a>
                                    <div class="portfolio-links">

                                    </div>
                                </div>
                            </div>
                        </div>

                    {% endfor %}
                </div>

            </div>
        </section><!-- End Portfolio Section -->


    </main><!-- End #main -->
{% endblock %}